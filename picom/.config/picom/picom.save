#################################
#           Animations          #
#################################
# Requires: https://github.com/jonaburg/picom

# (These are also the default values)
animations = true;
animation-stiffness-in-tag = 125;
animation-stiffness-tag-change = 90.0;

animation-window-mass = 0.4;
animation-dampening = 15;
animation-clamping = true;

animation-for-open-window = "zoom";
animation-for-unmap-window = "zoom";
animation-for-transient-window = "slide-up";
animation-for-prev-tag = "minimize";
animation-for-next-tag = "slide-in-center";

animation-for-workspace-switch-in = "slide-down";
animation-for-workspace-switch-out = "slide-up";

#################################
#             Shadows           #
#################################
shadow = true;
shadow-radius = 12;
shadow-opacity = 0.75;
shadow-offset-x = -12;
shadow-offset-y = -12;
shadow-color = "#000000";

shadow-exclude = [
  "name = 'Notification'",
  "class_g = 'Conky'",
  "class_g ?= 'Notify-osd'",
  "class_g = 'Cairo-clock'",
  "class_g = 'slop'",
  "class_g = 'Polybar'",
  "_GTK_FRAME_EXTENTS@:c",
  "window_type = 'menu'",
  "window_type = 'dropdown_menu'",
  "window_type = 'popup_menu'",
  "window_type = 'tooltip'"
];

#################################
#           Fading              #
#################################
fading = true;
fade-in-step = 0.03;
fade-out-step = 0.03;
fade-delta = 5;

fade-exclude = [
  "class_g = 'slop'"   # maim
]

no-fading-openclose = false
no-fading-destroyed-argb = true

#################################
#   Transparency / Opacity      #
#################################
inactive-opacity = 0.85;
frame-opacity = 0.9;
inactive-opacity-override = false;
active-opacity = 0.95;

# Dim inactive windows. (0.0 - 1.0, defaults to 0.0)
inactive-dim = 0.1;
inactive-dim-fixed = true;

focus-exclude = [
  "class_g = 'Cairo-clock'",
  "class_g = 'Bar'",                    # lemonbar
  "class_g = 'slop'",                   # maim
  "class_g = 'ranger'"
];

opacity-rule = [
  "100:class_g    = 'XTerm'",
  "100:class_g    = 'URxvt'",
  "100:class_g    = 'firefox'",
  "100:class_g    = 'Thunderbird'",
  "100:class_g    = 'Alacritty'",
  "90:class_g     = 'Polybar'",
  "100:class_g    = 'code-oss'",
  "100:class_g    = 'Meld'",
  "100:class_g    = 'TelegramDesktop'",
  "90:class_g     = 'Joplin'",
  "100:class_g    = 'firefox'",
  "100:class_g    = 'Thunderbird'",
  "80:class_g     = 'Rofi'",
  "90:class_g     = 'i3bar'",
  "85:class_g     = 'Dunst'",
  "100:window_type = 'normal'",
  "100:window_type = 'dialog'",
  "95:window_type = 'popup_menu'",
  "95:window_type = 'dropdown_menu'"
];

#################################
#     Background-Blurring       #
#################################
blur: {
  method = "dual_kawase";
  strength = 8;
  background = true;
  background-frame = false;
  background-fixed = false;
  kern = "3x3box";
}

# Exclude conditions for background blur.
blur-background-exclude = [
  "window_type = 'dock'",
  "window_type = 'desktop'",
  "_GTK_FRAME_EXTENTS@:c",
  "class_g = 'slop'",
  "class_g = 'Firefox' && argb",
  "name = 'rofi - Search'",
  "class_g = 'download'",
  "class_g = 'steam_app_*'"
];

#################################
#       General Settings        #
#################################
daemon = true;
experimental-backends = true;
backend = "glx";
vsync = true;
mark-wmwin-focused = true;
mark-ovredir-focused = true;
detect-rounded-corners = true;
detect-client-opacity = true;
refresh-rate = 0;
detect-transient = true;
detect-client-leader = true;
use-damage = true;
log-level = "info";

wintypes: {
  normal = { fade = true; shadow = true; }
  tooltip = { fade = true; shadow = true; opacity = 0.75; focus = true; full-shadow = false; }
  dock = { shadow = false; clip-shadow-above = true; }
  dnd = { shadow = false; }
  popup_menu = { opacity = 0.8; shadow = false; }
  dropdown_menu = { opacity = 0.8; shadow = false; }
  utility = { shadow = false; }
};

#################################
#          Transitions          #
#################################
transition-length = 300;
transition-pow-x = 0.1;
transition-pow-y = 0.1;
transition-pow-w = 0.1;
transition-pow-h = 0.1;
size-transition = true;

#################################
#     GLX backend
#################################
glx-no-stencil = true;
glx-copy-from-front = false;
glx-no-rebind-pixmap = true;
glx-swap-method = -1;

# Window type settings
# 'WINDOW_TYPE' is one of the 15 window types defined in EWMH standard:
# "unknown", "desktop", "dock", "toolbar", "menu", "utility",
# "splash", "dialog", "normal", "dropdown_menu", "popup_menu",
# "tooltip", "notification", "combo", and "dnd".
#################################
#     Corner Radius Settings    #
#################################
corner-radius = 12;
rounded-corners-exclude = [
  "window_type = 'dock'",
  "window_type = 'desktop'",
  "window_type = 'tooltip'",
  "class_g = 'Polybar'",
  "class_g = 'i3bar'",
  "class_g = 'Dunst'"
];

detect-rounded-corners = true;
round-borders = 1;
round-borders-exclude = [
  "class_g = 'TelegramDesktop'"
];

#################################
#     Custom Blur Settings      #
#################################
blur: {
  method = "dual_kawase";
  strength = 8;
  background = true;
  background-frame = false;
  background-fixed = false;
  kern = "3x3box";
}

blur-background = true;
blur-background-frame = true;
blur-kern = "3x3box";
blur-background-fixed = false;

# Additional animation settings for smoother transitions
animations-exclude = [
  "name = 'Notification'",
  "window_type = 'dropdown_menu'",
  "window_type = 'popup_menu'",
  "window_type = 'tooltip'",
  "class_g = 'Dunst'"
];

animation-stiffness = 300.0;
animation-dampening = 22.0;
animation-window-mass = 0.5;
animation-delta = 10;
animation-clamping = true;

# Performance improvements
unredir-if-possible = true;
unredir-if-possible-delay = 1000;

# Additional settings for better performance
xrender-sync-fence = true;
